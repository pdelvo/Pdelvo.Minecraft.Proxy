<?xml version="1.0" encoding="utf-8"?>

<configuration>
  <configSections>
    <section name="proxy"
             type="Pdelvo.Minecraft.Proxy.Library.Configuration.ProxyConfigurationSection, Pdelvo.Minecraft.Proxy.Library, PublicKeyToken=null"
             allowDefinition="Everywhere" allowExeDefinition="MachineToApplication" restartOnExternalChanges="true" />
    <section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler, log4net" />
  </configSections>
  <startup>
    <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.5" />
  </startup>

  <proxy>
    <endPoints>
      <add name="main" motd="Hello, World!" localEndPoint="0.0.0.0:25565" maxPlayers="111" serverVersionName="MineProxy.Net">
        <backendRefs>
          <add name="mainServer"/>
        </backendRefs>
      </add>
      <add name="debug" motd="Hello, World! Debug" localEndPoint="0.0.0.0:25566" maxPlayers="10" serverVersionName="MineProxy.Net Debug"/>
    </endPoints>
    <server>
      <add name="mainServer" kickMessage="Maintenance Mode" endPoint="127.0.0.1:25566" isDefault="true" minecraftVersion="" />
      <!--Dns sample-->
      <add name="devServer" dnsName="dev.myserver.com" endPoint="127.0.0.1:25567" isDefault="false"
           minecraftVersion="40" />
    </server>
  </proxy>
  <log4net>
    <!-- The DebugFileAppender writes all messages to a log file-->
    <appender name="DebugConsoleAppender" type="log4net.Appender.ConsoleAppender">
      <threshold value="DEBUG" />
      <layout type="log4net.Layout.PatternLayout">
        <!--Do not log the trace to the console-->
        <IgnoresException value="False" />
        <param name="ConversionPattern" value="%5p [%d] - %m%n" />
      </layout>
    </appender>
    <root>
      <appender-ref ref="DebugConsoleAppender" />
    </root>
  </log4net>
</configuration>